<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView

        android:id="@+id/beginners_legs_home"
        android:layout_width="300dp"
        android:layout_height="150dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white"
        >



        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/beginner_legs_image"
            android:background="@drawable/legs1"
            android:layout_gravity="fill"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/beginner_legs_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Widget.AppCompat.Button.Borderless"/>




        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/beginners__legs_text"
                android:layout_gravity="left|top"
                android:layout_margin="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leg Beginner"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/star4"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/todo"
                    app:tint="@color/yellow" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/star4"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    app:tint="@color/black"
                    android:contentDescription="@string/todo" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/star4"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    app:tint="@color/black"
                    android:contentDescription="@string/todo" />

            </LinearLayout>


        </GridLayout>





    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView

        android:id="@+id/intermediate_legs_home"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginStart="6dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white"
        >



        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/intermediate_legs_image"
            android:background="@drawable/legs2"
            android:layout_gravity="fill"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/intermediate_legs_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Widget.AppCompat.Button.Borderless"/>




        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/intermediate_legs_text"
                android:layout_gravity="left|top"
                android:layout_margin="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leg Intermediate"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/star4"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    app:tint="@color/yellow"
                    android:contentDescription="@string/todo" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/star4"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    app:tint="@color/yellow"
                    android:contentDescription="@string/todo" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/star4"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    app:tint="@color/black"
                    android:contentDescription="@string/todo" />

            </LinearLayout>


        </GridLayout>





    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView

        android:id="@+id/home_fast"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginStart="6dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white"
        >



        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/advanced_legs_image"
            android:background="@drawable/legs3"
            android:layout_gravity="fill"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/advanced_legs_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Widget.AppCompat.Button.Borderless"/>




        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_gravity="left|top"
                android:layout_margin="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leg Advanced"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/star4"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    app:tint="@color/yellow"
                    android:contentDescription="@string/todo" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/star4"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    app:tint="@color/yellow"
                    android:contentDescription="@string/todo" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/star4"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    app:tint="@color/yellow"
                    android:contentDescription="@string/todo" />

            </LinearLayout>


        </GridLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>