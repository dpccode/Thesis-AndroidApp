<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="?android:colorPrimaryDark"
    android:layout_marginBottom="50dp"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="?android:colorPrimaryDark">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/picture_and_button"
            android:layout_marginLeft="4dp"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/subscription_status"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/subStatusCardView"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="left|center"
                    app:cardBackgroundColor="@color/lime"
                    app:cardCornerRadius="6dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/subscription_status"
                    android:translationX="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/subStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Συνδρομή: 6 μηνών"
                        android:textColor="@color/teal"
                        android:textSize="20dp"
                        tools:ignore="NotSibling" />


                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/teal" />


            <TextView
                android:id="@+id/subStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ημερομηνία Εγγραφής: 30/6/2012"
                android:textColor="@color/teal"
                android:textSize="20dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/teal" />

            <TextView
                android:id="@+id/subEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/teal"
                android:textSize="20dp"
                android:text="Ημερομηνία Λήξης:   30/12/2012" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/teal" />


        </LinearLayout>




        <RelativeLayout
            android:id="@+id/picture_and_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:colorPrimaryDark"


            >


            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/picture"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:background="@drawable/ripple_effect"
                android:backgroundTint="?android:colorPrimaryDark"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/add_user1">


            </com.mikhaellopez.circularimageview.CircularImageView>


        </RelativeLayout>




    </RelativeLayout>



<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">









    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="3dp"
    android:backgroundTint="@color/teal"
    app:cardCornerRadius="12dp">





       <ImageView
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:layout_marginTop="4dp"
           android:layout_marginLeft="6dp"
           android:layout_marginBottom="4dp"
           android:layout_gravity="left|center"
           android:src="@drawable/caloriescalc"
           android:scaleType="fitCenter"/>




        <Button
            android:id="@+id/startCaloriesCalculatorActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Calories Calculator"
            android:textStyle="bold"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/white"/>



</androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
android:layout_margin="3dp"
        android:backgroundTint="@color/teal"
        app:cardCornerRadius="12dp">





        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="left|center"
            android:src="@drawable/reminder3"
            android:scaleType="fitCenter"/>


        <Button
            android:id="@+id/startNotificationsActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Notifications"
            android:textStyle="bold"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/white"/>

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="3dp"
        android:backgroundTint="@color/teal"
        app:cardCornerRadius="12dp">





        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="left|center"
            android:src="@drawable/history3"
            android:scaleType="fitCenter"/>




        <Button
            android:id="@+id/startHistoryActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="History"
            android:textStyle="bold"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/white"/>

    </androidx.cardview.widget.CardView>




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
android:layout_margin="3dp"
        android:backgroundTint="@color/teal"
        app:cardCornerRadius="12dp">





        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="left|center"
            android:src="@drawable/mail3"
            android:scaleType="fitCenter"/>


        <Button
            android:id="@+id/startContactUsActivity"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Contact Us"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/teal"
            app:cardCornerRadius="12dp">





            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="4dp"
                android:layout_gravity="left|center"
                android:src="@drawable/settings1"
                android:scaleType="fitCenter"/>




            <Button
                android:id="@+id/startSettingsActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Settings"
                android:textStyle="bold"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textColor="@color/white"/>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>


</LinearLayout>