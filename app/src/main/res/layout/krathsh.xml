<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

>



    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"

        app:cardCornerRadius="20dp"
        android:layout_margin="13dp"
        >


        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:background="@color/teal"
            android:padding="8dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="5"
                android:layout_margin="6dp">



                <TextView
                    android:id="@+id/res_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:colorPrimaryDark"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="Ομαδικο πιλατες (προχςρημενοι)"
                    android:textColor="?android:colorAccent"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    tools:ignore="MissingConstraints"
                    />


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    >


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:gravity="center|left"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        android:orientation="horizontal"
                        android:background="@drawable/back">


                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="match_parent"
                            android:scaleType="fitStart"
                            android:background="@color/teal"
                            android:src="@drawable/personpng" />

                        <TextView
                            android:id="@+id/res_people"
                            android:layout_width="60dp"
                            android:layout_height="36dp"
                            android:gravity="left|center"
                            android:background="?android:colorPrimaryDark"
                            android:textColor="?android:colorAccent"
                            android:textStyle="bold"
                            android:text="28/30" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:orientation="horizontal"
                        android:background="@drawable/back">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:contentDescription="@string/app_name"
                            android:scaleType="center"
                            android:layout_gravity="center"
                            android:background="@color/teal"
                            android:src="@drawable/baseline_schedule_black_36dp"/>

                        <TextView
                            android:id="@+id/res_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?android:colorPrimaryDark"
                            android:textColor="?android:colorAccent"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:text="Παρασκευη 7:00-8:00" />

                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="6dp">






                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    >

                    <ImageButton
                        android:id="@+id/make_resBtn"
                        android:layout_width="60dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:src="@drawable/check13"/>

                    <ImageButton
                        android:id="@+id/cancel_resBtn"
                        android:layout_width="60dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:clickable="false"
                        android:src="@drawable/close"/>




                </LinearLayout>



            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>